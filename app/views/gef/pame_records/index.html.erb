<main class="protected-areas">

  <h1>WDPA ID #<%= @pame_assessments.first.gef_wdpa_records.first.wdpa_id %></h1>
  <div class="gef-main-container">
    <h2>Assessments List </h2>
    <table class="table-condensed">
     <tr class="text-center">
        <th>Assessment Year</th>
        <th>Assessment Type</th>
        <th>METT Page</th>
      </tr>
      <% @pame_assessments.each do |assessment| %>
      <tr class="text-center">
        <td><%= assessment.assessment_year %></td>
        <td><%= assessment.assessment_type %></td>
        <td><%= link_to assessment.mett_original_uid, gef_area_wdpa_record_pame_record_path(@pame_assessments.first.gef_area.gef_pmis_id, @pame_assessments.first.gef_wdpa_records.first.wdpa_id, assessment.mett_original_uid) %></td>
      </tr>
    <% end %>
    </table>
 </div>
</main>
